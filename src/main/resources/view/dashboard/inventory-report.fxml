<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="487.0" prefWidth="896.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.pos.controller.dashboard.InventoryReportController">
   <children>
      <HBox prefHeight="93.0" prefWidth="896.0">
         <children>
            <VBox prefHeight="93.0" prefWidth="220.0">
               <children>
                  <TextField fx:id="txtProductId" focusTraversable="false" onKeyTyped="#productIdKeyTyped" prefHeight="20.0" prefWidth="302.0" promptText="Enter Product ID" styleClass="txtInput" stylesheets="@../../style/textFieldStyle.css">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="14.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox prefHeight="32.0" prefWidth="298.0">
                     <children>
                        <Button fx:id="btnSearch" focusTraversable="false" mnemonicParsing="false" onAction="#btnSearchAction" prefHeight="32.0" prefWidth="85.0" style="-fx-background-color: #159493; -fx-background-radius: 10px;" text="Search" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="20.0" right="10.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="btnCancel" focusTraversable="false" mnemonicParsing="false" onAction="#btnCancelAction" prefHeight="32.0" prefWidth="85.0" style="-fx-background-color: #353c52; -fx-background-radius: 10px;" text="Cancel" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <JFXComboBox fx:id="optYear" focusTraversable="false" onAction="#optYearAction" prefHeight="37.0" prefWidth="180.0" promptText="   Select a Year" styleClass="txtInput" stylesheets="@../../style/textFieldStyle.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets top="14.0" />
               </HBox.margin>
            </JFXComboBox>
            <JFXComboBox fx:id="optMonth" focusTraversable="false" layoutX="230.0" layoutY="30.0" onAction="#optMonthAction" prefHeight="37.0" prefWidth="180.0" promptText="   Select a Month" styleClass="txtInput" stylesheets="@../../style/textFieldStyle.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets left="20.0" top="14.0" />
               </HBox.margin>
            </JFXComboBox>
            <Button fx:id="btnGenReport" focusTraversable="false" mnemonicParsing="false" onAction="#btnGenReportAction" prefHeight="32.0" prefWidth="160.0" style="-fx-background-color: #159493; -fx-background-radius: 10px;" text="Generate Report" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets left="116.0" top="14.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <BarChart fx:id="chart" prefHeight="394.0" prefWidth="896.0" title="Inventory Report">
        <xAxis>
          <CategoryAxis fx:id="chartCategory" animated="false" label="Months" prefHeight="60.0" prefWidth="766.0" side="BOTTOM" tickLabelFill="#2f3548">
               <tickLabelFont>
                  <Font size="10.0" />
               </tickLabelFont>
            </CategoryAxis>
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="chartNumber" animated="false" label="Quantity" prefHeight="238.0" prefWidth="60.0" side="LEFT" tickLabelFill="#2f3548" upperBound="10000.0">
               <tickLabelFont>
                  <Font size="10.0" />
               </tickLabelFont>
            </NumberAxis>
        </yAxis>
      </BarChart>
   </children>
</VBox>
