<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="hBox" alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="1169.0" style="-fx-background-color: #353c52;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.pos.controller.dashboard.HeaderController">
   <children>
      <Button fx:id="btnSwitchToDev" focusTraversable="false" mnemonicParsing="false" onAction="#switchToDevAction" style="-fx-background-color: #d9d9d9; -fx-background-radius: 10px; -fx-border-color: #d9d9d9; -fx-border-radius: 10px;" text="Switch to Dev" textFill="#2f3548">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Separator fx:id="separatorDev" layoutX="791.0" layoutY="10.0" orientation="VERTICAL" prefHeight="200.0">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Separator>
      <Label fx:id="dspDate" text="2024-06-03" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Label>
      <Separator orientation="VERTICAL" prefHeight="200.0">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Separator>
      <Label fx:id="dspTime" prefWidth="72.0" text="10:20:48" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Label>
      <Separator orientation="VERTICAL" prefHeight="200.0">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Separator>
      <SplitMenuButton focusTraversable="false" mnemonicParsing="false" stylesheets="@../../style/userSplitMenuBtnStyle.css">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#profileAction" styleClass="menuItem" text="Profile" />
            <MenuItem mnemonicParsing="false" onAction="#logOutAction" styleClass="menuItem" text="Log Out" />
            <MenuItem mnemonicParsing="false" onAction="#exitAction" styleClass="menuItem" text="Exit" />
         </items>
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/profile-icon.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </graphic>
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </SplitMenuButton>
      <Label fx:id="dspMode" text="Admin" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Label>
   </children>
</HBox>
